# ZK Backup â€” Caddy reverse proxy
#
# For IP-based / self-hosted setup:
#   Uses ":443" (catch-all) so it works even without SNI
#   (Android doesn't send SNI when connecting to an IP address).
#   "tls internal" generates a self-signed certificate.
#
# For a real domain: use Caddyfile.domain instead.

:443 {
    tls internal

    reverse_proxy api:8000

    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }

    # Request size limit (slightly above 10 MB chunk + overhead)
    request_body {
        max_size 12MB
    }

    # Access logging
    log {
        output stdout
        format json
    }
}
