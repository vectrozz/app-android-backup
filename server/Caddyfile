# ZK Backup — Caddy reverse proxy
#
# Uses pre-generated self-signed certificate (from init-certs.sh).
# Works reliably with IP addresses — no Caddy internal PKI issues.
#
# For a real domain with Let's Encrypt: use Caddyfile.domain instead.

:443 {
    tls /certs/cert.pem /certs/key.pem

    reverse_proxy api:8000

    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }

    # Request size limit (slightly above 10 MB chunk + overhead)
    request_body {
        max_size 12MB
    }

    # Access logging
    log {
        output stdout
        format json
    }
}
